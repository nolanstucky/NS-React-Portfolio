      "modes": {
        "bubble": {
          "distance": 400,
          "duration": 0.3,
          "opacity": 1,
          "size": 4
        },
        "grab": {
          "distance": 400,
          "links": {
            "opacity": 0.5
          }
        }
      }
    },
    "particles": {
      "links": {
        "color": {
          "value": "#ffffff"
        },
        "distance": 500,
        "opacity": 0.4,
        "width": 2
      },
      "move": {
        "attract": {
          "rotate": {
            "x": 600,
            "y": 1200
          }
        },
        "direction": "bottom",
        "enable": true,
        "outModes": {
          "bottom": "out",
          "left": "out",
          "right": "out",
          "top": "out"
        }
      },
      "number": {
        "density": {
          "enable": true
        },
        "value": 400
      },
      "opacity": {
        "random": {
          "enable": true
        },
        "value": 0.5,
        "animation": {
          "minimumValue": 0.1,
          "speed": 0.1
        }
      },
      "size": {
        "random": {
          "enable": true
        },
        "value": 2,
        "animation": {
          "minimumValue": 0.1,
          "speed": 5
        }
      }
